<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/powderblue</item>
        <item name="colorPrimaryDark">@color/darkslategray</item>
        <item name="colorAccent">@color/crimson</item>
    </style>
    <style name="n_selected">
        <item name="android:textColor">@color/darkgrey</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">25dp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="y_selected">
        <item name="android:textColor">@color/darkolivegreen</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">25dp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="title">
        <item name="android:textColor">@color/darkolivegreen</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">30dp</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
